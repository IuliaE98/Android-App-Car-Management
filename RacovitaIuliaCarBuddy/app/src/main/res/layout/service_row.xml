<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/beautifulBlue"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/adapterImageid"
            android:layout_width="48dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginLeft="150dp"
            android:src="@drawable/id"></ImageView>

        <TextView
            android:id="@+id/adaptertxtViewname"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/adapterImgAddress"
            android:layout_width="46dp"
            android:layout_height="57dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/placeholder"></ImageView>

        <TextView
            android:id="@+id/adapterTxtViewAddress"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/adapterImageMail"
            android:layout_width="50dp"
            android:layout_height="56dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/envelope"></ImageView>

        <TextView
            android:id="@+id/adapterTxtViewMail"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/adapterImagePhone"
            android:layout_width="52dp"
            android:layout_height="63dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/telephone"></ImageView>

        <TextView
            android:id="@+id/adapterTxtViewPhone"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="match_parent"></TextView>
    </LinearLayout>


</LinearLayout>